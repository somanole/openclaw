{
  "id": "llamaguard",
  "uiHints": {
    "provider": {
      "label": "Model Provider",
      "help": "e.g., ollama, openai"
    },
    "model": {
      "label": "Model ID",
      "help": "e.g., llama-guard3:8b"
    },
    "authProfileId": {
      "label": "Auth Profile",
      "advanced": true
    },
    "timeoutMs": {
      "label": "Timeout (ms)",
      "advanced": true
    },
    "failOpen": {
      "label": "Fail Open",
      "help": "Allow requests on model errors"
    },
    "maxTokens": {
      "label": "Max Tokens",
      "advanced": true
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "provider": {
        "type": "string"
      },
      "model": {
        "type": "string"
      },
      "authProfileId": {
        "type": "string"
      },
      "timeoutMs": {
        "type": "integer",
        "minimum": 1000
      },
      "failOpen": {
        "type": "boolean"
      },
      "maxTokens": {
        "type": "integer",
        "minimum": 1
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["id", "name", "description"]
        }
      },
      "stages": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "beforeRequest": {
            "$ref": "#/$defs/stageConfig"
          },
          "beforeToolCall": {
            "$ref": "#/$defs/stageConfig"
          },
          "afterToolCall": {
            "$ref": "#/$defs/stageConfig"
          },
          "afterResponse": {
            "$ref": "#/$defs/stageConfig"
          }
        }
      }
    },
    "$defs": {
      "stageConfig": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "mode": {
            "type": "string",
            "enum": ["block", "monitor"]
          },
          "blockMode": {
            "type": "string",
            "enum": ["replace", "append"]
          },
          "includeHistory": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
