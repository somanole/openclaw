{
  "id": "grayswan-cygnal-guardrail",
  "uiHints": {
    "apiKey": {
      "label": "API Key",
      "sensitive": true,
      "help": "Gray Swan Cygnal API key"
    },
    "apiBase": {
      "label": "API Base URL",
      "advanced": true,
      "help": "Override for Gray Swan API base URL"
    },
    "policyId": {
      "label": "Policy ID",
      "help": "Gray Swan policy identifier"
    },
    "reasoningMode": {
      "label": "Reasoning Mode",
      "advanced": true
    },
    "violationThreshold": {
      "label": "Violation Threshold",
      "help": "Default violation threshold (0-1)"
    },
    "timeoutMs": {
      "label": "Timeout (ms)",
      "advanced": true
    },
    "failOpen": {
      "label": "Fail Open",
      "help": "Allow requests on API errors"
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "apiKey": {
        "type": "string"
      },
      "apiBase": {
        "type": "string"
      },
      "policyId": {
        "type": "string"
      },
      "categories": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      },
      "reasoningMode": {
        "type": "string",
        "enum": ["off", "hybrid", "thinking"]
      },
      "violationThreshold": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      },
      "timeoutMs": {
        "type": "integer",
        "minimum": 1000
      },
      "failOpen": {
        "type": "boolean"
      },
      "stages": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "beforeRequest": {
            "$ref": "#/$defs/stageConfig"
          },
          "beforeToolCall": {
            "$ref": "#/$defs/stageConfig"
          },
          "afterToolCall": {
            "$ref": "#/$defs/stageConfig"
          },
          "afterResponse": {
            "$ref": "#/$defs/stageConfig"
          }
        }
      }
    },
    "$defs": {
      "stageConfig": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "mode": {
            "type": "string",
            "enum": ["block", "monitor"]
          },
          "violationThreshold": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "blockMode": {
            "type": "string",
            "enum": ["replace", "append"]
          },
          "blockOnMutation": {
            "type": "boolean"
          },
          "blockOnIpi": {
            "type": "boolean"
          },
          "includeHistory": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
